# Example .env file for Arcane_Python bot
# Copy this file to .env and fill in your actual values

# Discord Bot Token
BOT_TOKEN=your_discord_bot_token_here

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=arcane_bot

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=KingsAllianceBot/1.0

# Feature Toggles
# Set to "true" to enable, "false" to disable

# Enable debug commands (migrate-ticket-open, verify-ticket-channels)
ENABLE_DEBUG_COMMANDS=false

# Enable Reddit debug commands (th15/16/17-search-debug, clan-post-debug, etc.)
ENABLE_REDDIT_DEBUG_COMMANDS=false

# Enable test commands (test-war-sync)
ENABLE_TEST_COMMANDS=false

# Debug Mode Settings (individual monitor debug modes)
TH15_SEARCH_DEBUG=false
TH16_SEARCH_DEBUG=false
TH17_SEARCH_DEBUG=false
CLAN_POST_DEBUG=false
BAND_DEBUG=false